<% if (title) { %>
    <h1>
      <%= title %>
    </h1>
    <% } else { res.redirect('/') } %>
    <div id="account-management-view">
      <%- messages() %>
  
        <% if (errors) { %>
          <ul class="notice">
            <% errors.array().forEach(error=> { %>
              <li>
                <%= error.msg %>
              </li>
              <% }) %>
          </ul>
          <% } %>
          <h2> Welcome <%= locals.accountData.account_firstname %> </h2>
          <p><a class="managementLinks" title="Update Account Information" href="/account/update/<%- locals.accountData.account_id %>">Update Account Information</a></p>
            <% if (locals.accountData.account_type == 'Employee'|| locals.accountData.account_type == 'Admin') { %>
              <h3>Inventory Management</h3>
              <p><a class="managementLinks" title="Go to Vehicle Management Page" href="/inv/"> Inventory Management </a></p>
          <% } %>
          <h3>Your Reviews</h3>
          <table id="reviewDisplay" data-account-id="<%- locals.accountData.account_id %>"></table>
          </div>        
          <script src="../../js/reviewAccount.js"></script>
